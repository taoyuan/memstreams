{
  "name": "memstreams",
  "description": "Memory Streams library for JavaScript based on readable-stream",
  "version": "0.3.0",
  "author": "Yuan Tao <towyuan@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:taoyuan/memstreams.git"
  },
  "homepage": "https://github.com/taoyuan/memstreams",
  "keywords": [
    "stream",
    "string",
    "memory",
    "Readable",
    "Writable"
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "files": [
    "README.md",
    "lib",
    "src",
    "!*/__tests__"
  ],
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "format": "prettier --write \"{src,test}/**/*.ts\" --single-quote --trailing-comma es5",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "npm run build && nyc mocha --recursive -r ts-node/register \"src/__tests__/**/*.test.ts\""
  },
  "dependencies": {
    "readable-stream": "~3.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2",
    "@types/mocha": "^9.0",
    "@types/readable-stream": "^2.3.12",
    "@types/sinon": "^10.0.6",
    "chai": "^4.3",
    "mocha": "^9.1",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "ts-node": "^10.4",
    "typescript": "^4.5.2"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/__tests__/**",
      "src/index.ts"
    ]
  },
  "engines": {
    "node": "8.* || >= 10.*"
  }
}
