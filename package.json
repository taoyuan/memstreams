{
  "name": "memstreams",
  "description": "Memory Streams library for JavaScript based on readable-stream",
  "version": "0.2.2",
  "author": "Yuan Tao <towyuan@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:taoyuan/memstreams.git"
  },
  "homepage": "https://github.com/taoyuan/memstreams",
  "keywords": [
    "stream",
    "string",
    "memory",
    "Readable",
    "Writable"
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "files": [
    "README.md",
    "lib",
    "src",
    "!*/__tests__"
  ],
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "format": "prettier --write \"{src,test}/**/*.ts\" --single-quote --trailing-comma es5",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "npm run build && nyc mocha --recursive -r ts-node/register \"src/__tests__/**/*.test.ts\""
  },
  "dependencies": {
    "readable-stream": "~3.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2",
    "@types/mocha": "^5.2",
    "@types/readable-stream": "^2.3.4",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2",
    "mocha": "^6.2",
    "nyc": "^15.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "sinon": "^8.0.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.6.3"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/__tests__/**",
      "src/index.ts"
    ]
  },
  "engines": {
    "node": "8.* || >= 10.*"
  }
}
