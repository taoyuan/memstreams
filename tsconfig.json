{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "lib": [
      "esnext"
    ],
    "target": "es2015",
    "typeRoots": [
      "node_modules/@tsts",
      "node_modules/@types"
    ]
  },
  "include": [
    "index.ts",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
